{
  "method": "concat",
  "name": "pomt-bert-base-uncased-claim-only-3",
  "batch-size-train": 16,
  "batch-size-eval": 16,
  "lr": 2e-5,
  "epochs": 5,
  "seed": 3,

  "model-name": "bert-base-uncased",
  "lowercase": true,
  "max-input-len": 512,

  "task-variant": "only-claim",
  "evidence-variant": "n/a",

  "task-name": "pomt",
  "data-dir": "./data",

  "evaluation": {
    "pomt-all": {
      "name": "pomt-bb-co_pomt-test-3", "data": "pomt", "file": "test.jsonl"
    },
    "pomt-all-dev": {
      "name": "pomt-bb-co_pomt-dev-3", "data": "pomt", "file": "dev.jsonl"
    },
    "pomt-leaked": {
      "name": "pomt-bb-co_pomt-test-leaked-3", "data": "pomt", "file": "leaked-test.jsonl"
    },
    "pomt-unleaked": {
      "name": "pomt-bb-co_pomt-test-unleaked-3", "data": "pomt", "file": "unleaked-test.jsonl"
    }
  }
}